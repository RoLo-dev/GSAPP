@model List<Request>

@section Dashboard{
    <link rel="stylesheet" href="~/css/Dashboard.css">
}

<header id="Dash-header">
    <div class="wrapper nav">
        <div class="logo">
            <h1>Dashboard</h1>
        </div>
        <div class="nav-links">
            <ul>
                <li>
                    <a asp-action="Logout" asp-controller="Home">Logout</a>
                </li>
                <li>
                    <a asp-action="RequestForm" asp-controller="Home" id="request-btn" class="standout-btn">Make a request</a>
                </li>
            </ul>
        </div>
    </div>
</header>

<section id="dash-main" class="wrapper">
    <table>
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Address</th>
                    <th>Request Urgency</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var request in Model)
                {
                    @if (request.IsCompleted == false)
                    {
                        <tr>
                            <td>@request.Creator.FirstName @request.Creator.LastName</td>
                            <td>@request.Creator.City, @request.Creator.State</td>
                            <td>@request.Urgency</td>
                            <td><a asp-action="Detail" asp-route-Uid="@request.Creator.UserId" class="view-btn">View</a></td>
                        </tr>                 
                    }
                }
            </tbody>

    </table>
</section>